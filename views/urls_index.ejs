<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <title>TinyApp</title>
</head>
<%- include("partials/_header") %>
<body>
  <main  style="margin: 1em 5em;">
    <h3>My URLs</h3>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Short URL</th>
          <th scope="col">Long URL</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for(let url of Object.values(urls)) { %>
          <tr>
            <td><a href="/urls/<%= url.shortURL %>"><%= url.shortURL %></a></td>
            <td><%= url.longURL %></td>
            <td><a href="/urls/<%= url.shortURL %>" class="btn btn-info">EDIT</a></td>
            <td>
              <form method="POST" action="/urls/<%= url.shortURL %>/delete">
                <button class="btn btn-danger">DELETE</button>
              </form>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </main>
</body>
</html>